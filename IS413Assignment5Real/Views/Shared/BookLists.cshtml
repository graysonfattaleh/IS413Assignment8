@model IS413Assignment5Real.Models.ViewModels.BookListViewModel
<table id="booktable" class="table table-bordered table-dark">
    <thead class="text-center">
        <tr class="text-center">
            <th>Title</th>
            <th>Classification</th>
            <th>Author</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        <!--makes a row for each book entry-->
        @foreach (Book book in Model.Books)
        {


            <tr class="text-center tblrow" id=@book.BookId>
                <td>@book.Title</td>
                <td>@book.Classification</td>
                <td>@book.AuthorLast</td>
                <td>@book.Price</td>
                <td><form id="@book.BookId" asp-page="/AddBook" method="post">
    <input type="hidden" id="bookId" name="bookId" value="@book.BookId"/>
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right;">
                            Add Book
                        </button>
                    </span>
</form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn ank" page-class-normal="btn-outline-dark" page-url-filterer="@Model.CurrentCategory"
     page-class-selected="btn-primary "></div>
<br />

