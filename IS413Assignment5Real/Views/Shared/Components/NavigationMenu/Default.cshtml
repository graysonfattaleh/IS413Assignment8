
@model IEnumerable<string>
<a class="btn btn-block  @( @ViewBag.SelectedFilter == null ? "btn-primary" : "btn-outline-secondary" ) small_guy" asp-action="Index"
   asp-controller="Home" asp-route-filterer="">Home</a>

@foreach (string category in Model)
{
    <a class="btn btn-block  small_guy
       @(category == @ViewBag.SelectedFilter ? "btn-primary" : "btn-outline-secondary" )"
       asp-action="Index"
       asp-controller="Home" asp-route-filterer="@category" asp-route-pageNum="1">
        @category
    </a>
}